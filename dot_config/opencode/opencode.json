{
  "plugin": ["opencode-antigravity-auth@latest"],
  "mcp": {
    "context7": {
      "type": "remote",
      "url": "https://mcp.context7.com/mcp",
      "enabled": true,
      "headers": {
        "CONTEXT7_API_KEY": "{env:CONTEXT7_API_KEY}"
      }
    },
    "tidewave": {
      "type": "remote",
      "url": "http://localhost:3000/tidewave/mcp",
      "enabled": true
    }
  },
  "$schema": "https://opencode.ai/config.json"
}
