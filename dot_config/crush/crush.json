{
  "$schema": "https://charm.land/crush.json",
  "permissions": {
    "allowed_tools": ["view", "ls", "grep", "edit", "notify-send"]
  },
  "lsp": {
    "go": { "command": "gopls" },
    "ruby": { "command": "ruby-lsp" },
    "typescript": { "command": "typescript-language-server" }
  },
  "mcp": {
    "context7": {
      "type": "stdio",
      "command": "npx",
      "args": ["-y", "@upstash/context7-mcp"],
      "timeout": 10
    }
  }
}
